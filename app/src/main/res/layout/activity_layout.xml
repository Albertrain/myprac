<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutActivity">


    <!--中间按钮-->
    <Button
        android:id="@+id/zhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="中"
        />

    <!--上按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上"
        android:layout_above="@id/zhong"
        android:layout_alignRight="@+id/zhong"
        android:layout_alignLeft="@+id/zhong"
        />

    <!--下按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下"
        android:layout_below="@+id/zhong"
        android:layout_alignLeft="@+id/zhong"
        android:layout_alignRight="@id/zhong"
        />

    <!--左按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左"
        android:layout_toLeftOf="@id/zhong"
        android:layout_alignTop="@id/zhong"
        android:layout_alignBottom="@+id/zhong"
        android:layout_alignParentLeft="true"
        />

    <!--右按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右"
        android:layout_toRightOf="@id/zhong"
        android:layout_alignTop="@id/zhong"
        android:layout_alignBottom="@id/zhong"
        android:layout_alignParentRight="true"
        />


    <!--左上按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左上"
        android:layout_toLeftOf="@id/zhong"
        android:layout_above="@id/zhong"
        android:layout_alignParentLeft="true"
        />

    <!--右上按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右上"
        android:layout_toRightOf="@id/zhong"
        android:layout_above="@id/zhong"
        android:layout_alignParentRight="true"
        />

    <!--左下按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左下"
        android:layout_toLeftOf="@id/zhong"
        android:layout_below="@id/zhong"
        android:layout_alignParentLeft="true"
        />

    <!--右下按钮-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右下"
        android:layout_toRightOf="@id/zhong"
        android:layout_below="@id/zhong"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>