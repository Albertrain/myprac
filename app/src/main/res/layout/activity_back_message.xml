<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackMessageActivity"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="backup message"
        android:onClick="backupMessage"
        android:textSize="30sp"
        android:textColor="#986326"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="backup message02"
        android:onClick="backupMessage2"
        android:textSize="30sp"
        android:textColor="#986326"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解析短信xml"
        android:onClick="showXml"
        android:textSize="30sp"
        android:textColor="#986326"
        />

</LinearLayout>