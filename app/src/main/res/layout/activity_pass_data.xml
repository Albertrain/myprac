<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PassDataActivity">

    <EditText
        android:id="@+id/et_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input name" />

    <EditText
        android:id="@+id/et_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="intput your friend's name" />

    <Button
        android:id="@+id/bt_look_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="lookScore"
        android:text="look" />

    <Button
        android:id="@+id/bt_look_score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lookScore2"
        android:onClick="lookScore2"
        />

</LinearLayout>